{
    "name": "Text To Speech Extension",
    "version": "0.1",
    "manifest_version": 3,
    "description": "Text To Speech for assessments",
    "minimum_chrome_version": "23",
    "permissions": ["ttsEngine", "tts", "storage", "activeTab", "scripting", "declarativeContent"],
  
    "tts_engine": {
        "voices": [
          {
            "voice_name": "Alice",
            "lang": "en-US",
            "event_types": ["start", "marker", "end"]
          },
          {
            "voice_name": "Pat",
            "lang": "en-US",
            "event_types": ["end"]
          }
        ]
      },

      "background": {
        "service_worker": "background.js"
            }
  
    }
  